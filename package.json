{
  "name": "oracle-poc-sample",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf ./build && yarn hardhat:compile && tsc && tsc-alias",
    "start": "yarn run build && node build/src/app.js ",
    "serve": "tsc-watch --onSuccess \"sh -c 'yarn run tsc-alias && nodemon'\" | yarn roarr pretty-print",
    "dev": "concurrently \"yarn serve\" \"yarn watch:api-specs\"",
    "start:dev": "nodemon",
    "lint": "eslint . --ext .ts",
    "prettier-watch": "onchange 'src/**/*.ts' -- prettier --write {{changed}}",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "test": "export NODE_ENV='test' && jest",
    "prepare": "is-ci || husky install",
    "generate:contracts:typings": "yarn typechain --target=ethers-v6 --out-dir src/contracts/types src/contracts/abis/*.json",
    "hardhat:compile": "hardhat compile",
    "hardhat:test": "hardhat test",
    "hardhat:coverage": "hardhat coverage",
    "migrate": "ts-node node_modules/.bin/node-pg-migrate -j ts --database-url-var POSTGRES_URL --migrations-table pgmigrations_checkout",
    "clean": "rimraf ./artifacts/ ./flatten/ ./coverage/ ./coverage.json ./cache/ ./dist ./build ./clients/typescript-axios/doc ./clients/typescript-axios/dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cometh-game/checkout"
  },
  "keywords": [],
  "author": "Cometh.io",
  "license": "UNLICENSED",
  "private": true,
